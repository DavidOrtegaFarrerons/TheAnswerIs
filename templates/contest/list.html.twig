{% extends 'base.html.twig' %}

{% block title %}Concursos disponibles{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-purple-700 via-indigo-700 to-blue-700 text-white p-6">
        <div class="max-w-7xl mx-auto">
            <header class="text-center space-y-4 mb-14">
                <div class="text-6xl">ðŸ§©</div>
                <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">Elige tu prÃ³ximo reto</h1>
                <p class="text-gray-200 max-w-2xl mx-auto">Explora nuestra biblioteca de concursos y compite por la gloria.</p>
            </header>

            {# â”€â”€â”€â”€â”€â”€â”€â”€â”€ Tarjetas de concursos â”€â”€â”€â”€â”€â”€â”€â”€â”€ #}
            <section>
                <ul class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
                    {% for contest in contests %}
                        <li>
                            <button type="button"
                                    onclick="openModal('{{ contest.id }}')"
                                    class="group cursor-pointer w-full text-left rounded-3xl bg-neutral-900/70 backdrop-blur-sm overflow-hidden shadow-xl shadow-black/40 transition-transform hover:scale-[1.03]">
                                <div class="relative pt-[56%]">
                                    <img src="{{ contest.imageUrl }}"
                                         alt="{{ contest.name }}"
                                         class="absolute inset-0 w-full h-full object-cover">
                                    <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-60 transition-opacity"></div>
                                </div>

                                <div class="p-6 space-y-1">
                                    <h2 class="text-xl font-bold truncate">{{ contest.name }}</h2>
                                    <p class="text-sm text-gray-400">Clic para jugar</p>
                                </div>
                            </button>
                        </li>
                    {% endfor %}
                </ul>
            </section>
        </div>
    </div>

    {# â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ Modal â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ #}
    <div id="contest-modal"
         class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
        <div class="bg-neutral-900 rounded-2xl p-10 shadow-2xl w-full max-w-sm space-y-6 text-center">
            <h3 class="text-2xl font-bold text-white">Â¿Crear partida?</h3>
            <p class="text-gray-300">Se generarÃ¡ una nueva partida con el concurso seleccionado.</p>

            <div class="flex justify-center gap-4">
                <button
                    onclick="createGame()"
                    class="cursor-pointer rounded-full bg-yellow-500 px-4 py-2 font-semibold text-white hover:bg-yellow-400 transition">
                    Crear partida
                </button>

                <button
                    onclick="closeModal()"
                    class="cursor-pointer rounded-full bg-white/10 px-4 py-2 text-white hover:bg-white/20 transition">
                    Cancelar
                </button>
            </div>
        </div>
    </div>

    <form id="create-game-form" method="POST" action="{{ path('game_create') }}" class="hidden">
        <input type="hidden" name="contestId" id="form-contest-id">
    </form>

    <script>
        let selectedContestId = null;

        function openModal(id) {
            selectedContestId = id;
            document.getElementById('contest-modal').classList.remove('hidden');
            document.getElementById('contest-modal').classList.add('flex');
        }

        function closeModal() {
            const modal = document.getElementById('contest-modal');
            modal.classList.remove('flex');
            modal.classList.add('hidden');
            selectedContestId = null;
        }

        function createGame() {
            if (!selectedContestId) return;
            document.getElementById('form-contest-id').value = selectedContestId;
            document.getElementById('create-game-form').submit();
        }
    </script>
{% endblock %}
