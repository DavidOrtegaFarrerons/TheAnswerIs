{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Entrar ‚Ä¢ Quizzes{% endblock %}

{% block body %}
    <div class="min-h-screen bg-gradient-to-br from-purple-700 via-indigo-700 to-blue-700 flex items-center justify-center p-6">
        <div class="w-full max-w-md rounded-3xl bg-neutral-900/80 backdrop-blur-sm text-white px-8 py-10 shadow-2xl shadow-black/50">
            <div class="text-center space-y-2 mb-8">
                <div class="text-6xl">üîê</div>
                <h1 class="text-3xl font-extrabold tracking-tight">Inicia sesi√≥n</h1>
                <p class="text-white/80 text-sm">Accede para poder crear quizzes personalizados!.</p>
            </div>

            {# Flash messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 rounded-xl border border-white/10 bg-white/10 px-4 py-3 text-sm">{{ message|raw }}</div>
                {% endfor %}
            {% endfor %}

            {# Standard Symfony security error, if present #}
            {% if error %}
                <div class="mb-4 rounded-xl border border-red-500/30 bg-red-500/10 px-4 py-3 text-sm">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form action="{{ path('app_login') }}" method="post" class="space-y-6">
                <div class="space-y-2">
                    <label for="username" class="block text-sm font-medium text-white/90">Email</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"
                           class="w-full rounded-2xl bg-neutral-800 border border-white/10 px-4 py-3 text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-yellow-400"
                           placeholder="tu@email.com" autocomplete="email" required>
                </div>

                <div class="space-y-2">
                    <label for="password" class="block text-sm font-medium text-white/90">Contrase√±a</label>
                    <div class="relative">
                        <input type="password" id="password" name="_password"
                               class="w-full rounded-2xl bg-neutral-800 border border-white/10 px-4 py-3 pr-12 text-white placeholder-white/40 focus:outline-none focus:ring-2 focus:ring-yellow-400"
                               placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" autocomplete="current-password" required>
                        <button type="button" class="absolute inset-y-0 right-3 my-auto rounded-md px-2 text-white/70 hover:text-white/90"
                                onclick="togglePassword('password', this)">Ver</button>
                    </div>
                </div>

                {# Hidden CSRF token #}
                <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                {# Optional remember me #}
                <div class="flex items-center justify-between">
                    <label class="inline-flex items-center gap-2 text-sm text-white/80">
                        <input type="checkbox" name="_remember_me" class="rounded-md">
                        <span>Recu√©rdame</span>
                    </label>
                    <a href="#" class="text-sm text-yellow-400 hover:text-yellow-300">¬øOlvidaste la contrase√±a?</a>
                </div>

                <button type="submit"
                        class="w-full cursor-pointer inline-flex items-center justify-center gap-2 rounded-full bg-yellow-500 px-6 py-3 font-semibold text-neutral-900 transition-transform duration-150 hover:scale-105 hover:bg-yellow-400 active:scale-95">
                    Entrar
                </button>
            </form>

            <div class="mt-6 text-center text-sm text-white/80">
                ¬øNo tienes cuenta?
                <a href="{{ path('app_register') }}" class="font-semibold text-yellow-400 hover:text-yellow-300">Crear una cuenta</a>
            </div>
        </div>
    </div>

    <script>
        function togglePassword(id, btn) {
            const input = document.getElementById(id);
            if (!input) return;
            const isText = input.type === 'text';
            input.type = isText ? 'password' : 'text';
            btn.textContent = isText ? 'Ver' : 'Ocultar';
        }
    </script>
{% endblock %}
